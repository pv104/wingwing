<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/txtSimulatorState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상태"
        android:textSize="12sp"
        android:padding="6dp" />
    <TextView
        android:id="@+id/txtSimulatorPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위치"
        android:textSize="12sp"
        android:padding="6dp" />
    <TextView
        android:id="@+id/txtSimulatorControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="컨트롤"
        android:textSize="12sp"
        android:padding="6dp" />
    <TextView
        android:id="@+id/txtSimulatorGpsLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS 레벨"
        android:textSize="12sp"
        android:padding="6dp" />
    <TextView
        android:id="@+id/txtSimulatorDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="거리"
        android:textSize="12sp"
        android:padding="6dp" />
    <TextView
        android:id="@+id/txtSimulatorTargetLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="목표위치"
        android:textSize="12sp"
        android:padding="6dp" />
    <TextView
        android:id="@+id/txtSimulatorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="메시지"
        android:textSize="12sp"
        android:padding="6dp" />

    <!-- 버튼들 (4개씩 한 줄에 배치) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btnSimulatorTakeOff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="이륙" />

        <Button
            android:id="@+id/btnSimulatorLand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="착륙" />

        <Button
            android:id="@+id/btnEnableSimulator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="시뮬 설정" />

        <Button
            android:id="@+id/btnDisableSimulator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="시뮬 해제" />
    </LinearLayout>

    <!-- 이동 및 회전 버튼들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btnSimulatorMoveLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_move_left" />

        <Button
            android:id="@+id/btnSimulatorMoveUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_move_up" />
        <Button
            android:id="@+id/btnSimulatorMoveRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_move_right" />

        <Button
            android:id="@+id/btnSimulatorMoveDown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_move_down" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">


        <Button
            android:id="@+id/btnSimulatorRotateLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_rotate_left" />

        <Button
            android:id="@+id/btnSimulatorRotateRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_rotate_right" />
        <Button
            android:id="@+id/btnSimulatorEnableVirtualStick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="가상스틱 활성화" />

        <Button
            android:id="@+id/btnSimulatorDisableVirtualStick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="가상스틱 비활성화" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btnSimulatorMoveToTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="목표 이동" />
        <Button
            android:id="@+id/btnSimulatorGetTargetLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="값 받기" />
        <Button
            android:id="@+id/btnSimulatorStopMove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="멈추기 " />
        <Button
            android:id="@+id/btnSimulatorInitValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="초기화 " />
    </LinearLayout>
</LinearLayout>
