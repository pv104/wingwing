<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <!-- 시뮬레이터 상태를 표시하는 TextView -->
    <TextView
        android:id="@+id/txt_simulator_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상태"
        android:textSize="12sp"
        android:padding="6dp" />
    <!-- 시뮬레이터 연결 상태를 표시하는 TextView -->
    <TextView
        android:id="@+id/txt_simulator_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위치"
        android:textSize="12sp"
        android:padding="6dp" />

    <TextView
        android:id="@+id/txt_simulator_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="컨트롤"
        android:textSize="12sp"
        android:padding="6dp" />
    <!-- 메시지 표시 -->
    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="메시지"
        android:textSize="14sp"
        android:padding="6dp" />

    <!-- 버튼들 (4개씩 한 줄에 배치) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btnTakeOff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="이륙" />

        <Button
            android:id="@+id/btnLand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="착륙" />

        <Button
            android:id="@+id/btnEnableSimulator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="시뮬 설정" />

        <Button
            android:id="@+id/btnDisableSimulator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="시뮬 해제" />
    </LinearLayout>

    <!-- 이동 및 회전 버튼들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btnMoveLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_move_left" />

        <Button
            android:id="@+id/btnMoveUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_move_up" />
        <Button
            android:id="@+id/btnMoveRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_move_right" />

        <Button
            android:id="@+id/btnMoveDown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_move_down" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">


        <Button
            android:id="@+id/btnRotateLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_rotate_left" />

        <Button
            android:id="@+id/btnRotateRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_rotate_right" />
        <Button
            android:id="@+id/btnEnableVirtualStick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="가상스틱 활성화" />

        <Button
            android:id="@+id/btnDisableVirtualStick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="가상스틱 비활성화" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
    <Button
        android:id="@+id/btnInitValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="값 초기화" />
    <Button
        android:id="@+id/btnMoveToTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="목표 이동" />
    <Button
        android:id="@+id/btnAdjustYaw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="요 조정" />
    </LinearLayout>
</LinearLayout>
